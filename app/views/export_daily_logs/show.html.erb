					<th class="location"><%= t('activerecord.attributes.daily_log.arrival_location') %></th>
					<th class="boolean"><%= t('activerecord.attributes.daily_log.is_alcohol_check') %></th>
				</tr>
			</thead>
			<tbody>
			<% @daily_logs.each do |daily_log| %>
