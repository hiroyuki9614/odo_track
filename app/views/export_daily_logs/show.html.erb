	<div class="print-area">
		<div class="header">
			<div class="created_at">
				<p class="text-right">作成日：</p>
				<p class="text-right"><%= @today %></p>
			</div>
			<div class="user-name">
				<p class="text-right">氏名：</p><p class="text-right"><%= @user.user_name %></p>
