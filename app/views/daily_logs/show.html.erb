<section class="daily_log_index">
  <div class="bg-image h-100">
    <div class="mask d-flex align-items-center h-100" style="background-color: white;">
      <div class="container">
        <h5 class="mt-3">運転日報の詳細</h5>
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover mb-0 text-center">
                    <tr>
                      <th class="col-created_at"><%= t('activerecord.attributes.daily_log.created_at') %></th>
                      <th class="col-vehicle_id"><%= t('activerecord.attributes.daily_log.vehicle_id') %></th>
                      <th class="col-departure_datetime"><%= t('activerecord.attributes.daily_log.departure_datetime') %></th>
                      <th class="col-2"><%= t('activerecord.attributes.daily_log.arrival_datetime') %></th>
                      <th class="col-2"><%= t('activerecord.attributes.daily_log.departure_distance') %></th>
                      <th class="col-2"><%= t('activerecord.attributes.daily_log.arrival_distance') %></th>
                    </tr>
                    <tr>
                      <td class="col-2"><%= @daily_log.created_at.strftime("%Y年%m月%d日") %><%= @daily_log.week_format %></td>
                      <td class="col-2"><%= @daily_log.vehicle.vehicle_name + ' - ' +  @daily_log.vehicle.number %></td>
                      <td class="col-2"><%= @daily_log.departure_datetime.strftime("%Y年%m月%d日 %H:%M") %></td>
                      <td class="col-2"><%= @daily_log.arrival_datetime.strftime("%Y年%m月%d日 %H:%M") %></td>
                      <td class="col-2"><%= "#{number_with_delimiter(@daily_log.departure_distance)} km" %></td>
                      <td class="col-2"><%= "#{number_with_delimiter(@daily_log.arrival_distance)} km" %></td>
                    </tr>
                    </table>
                    <table class="table table-hover text-center">
                      <tr>
                        <th class="col-2"><%= t('activerecord.attributes.daily_log.departure_location') %></th>
                        <th class="col-2"><%= t('activerecord.attributes.daily_log.arrival_location') %></th>
                        <th class="col-2"><%= t('activerecord.attributes.daily_log.note') %></th>
                        <th class="col-2"><%= t('activerecord.attributes.daily_log.alcohol_check?') %></th>
                        <th class="col-2"><%= t('activerecord.attributes.daily_log.studless_tire?') %></th>
                        <th class="col-2"></th>
                      </tr>
                      <tr>
                        <td><%= @daily_log.departure_location %></td>
                        <td><%= @daily_log.arrival_location %></td>
                        <td class="note-cell"><%= @daily_log.note %></td>
                        <td><%= @daily_log.alcohol_check_text? %></td>
                        <td><%= @daily_log.studless_tire_text? %></td>
                        <td>
                          <div class="dropdown custom-dropdown">
                            <button class="btn btn-secondary dropdown-toggle text-dark" type="button" id="index_menu" data-bs-toggle="dropdown" aria-expanded="false">
                              menu <i class="bi bi-chevron-down"></i>
                            </button>
                            <ul class="dropdown-menu">
                              <li class="ms-1"><%= link_to "編集", edit_daily_log_path(@daily_log), class: "dropdown-item" %></li>
                              <hr>
                              <li class="ms-1"><%= link_to "削除", daily_log_delete_path(@daily_log), method: :post, class: "dropdown-item text-danger" %></li>
                            </ul>
                          </div>
                        </td>
                      </tr>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>