<!-- 車両名 -->
  <div class="col-md-2 col-sm-2">
    <div class="form-group">
      <%= f.label :vehicle_id, '車両名', class:"form-label" %><br>
      <%= f.collection_select :vehicle_id, Vehicle.selectable_vehicles, :second, :first, { selected: Vehicle.selectable_vehicles.first.second }, class: "form-select", style: "width: 180px" %>
      <%= render partial: 'shared/error_messages', locals: { record: @daily_log, symbol: :vehicle_id } %>
    </div>
  </div>
    <!-- 出発日時 -->
  <div class="col-md-3 col-sm-3 ps-4">
    <div class="form-group">
      <%= f.label :departure_datetime, '出発日時', class:"form-label" %><br>
      <%= f.datetime_field :departure_datetime, class: "form-control" %>
      <%= render partial: 'shared/error_messages', locals: { record: @daily_log, symbol: :departure_datetime } %>
    </div>
    <div class="form-group">
      <%= f.label :departure_distance, '出発時の距離', class: "form-label" %><br>
