    </div>
    <div class="form-group">
      <%= f.label :departure_location, '出発場所', class:"form-label" %><br>
      <%= f.text_field :departure_location, class:"form-control" %>
      <%= render partial: 'shared/error_messages', locals: { record: @daily_log, symbol: :departure_location } %>
    </div>
  </div>
    <!-- 到着日時 -->
  <div class="col-md-3 col-sm-3 ps-4">
    <div class="form-group">
      <%= f.label :arrival_datetime, '到着日時', class:"form-label" %><br>
      <%= f.datetime_field :arrival_datetime, class: "form-control" %>
      <%= render partial: 'shared/error_messages', locals: { record: @daily_log, symbol: :arrival_datetime } %>
    </div>
    <div class="form-group">
    <%= f.label :arrival_distance, '到着時の距離', class:"form-label" %><br>
    <%= f.number_field :arrival_distance, class: "form-control" %>
    <%= render partial: 'shared/error_messages', locals: { record: @daily_log, symbol: :arrival_distance } %>
    </div>
    <div class="form-group">
      <%= f.label :arrival_location, '到着場所', class:"form-label" %><br>
      <%= f.text_field :arrival_location, class:"form-control" %>
      <%= render partial: 'shared/error_messages', locals: { record: @daily_log, symbol: :arrival_location } %>
