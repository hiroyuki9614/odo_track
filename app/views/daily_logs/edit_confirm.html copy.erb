<% content_for :body_attributes, 'data-turbolinks="false"'.html_safe %>
<h2>下記の内容で日報を登録してもよろしいですか？</h2>
<div>
  <%= t('activerecord.attributes.daily_log.departure_datetime') %>:<%= @daily_log.departure_datetime.strftime("%Y年%m月%d日 %H:%M") %>
</div>
<div>
  <%= t('activerecord.attributes.daily_log.arrival_datetime') %>:<%= @daily_log.arrival_datetime.strftime("%Y年%m月%d日 %H:%M") %>
</div>
<div>
  <%= t('activerecord.attributes.daily_log.departure_distance') %>:<%= @daily_log.departure_distance %>
</div>
<div>
  <%= t('activerecord.attributes.daily_log.arrival_distance') %>:<%= @daily_log.arrival_distance %>
</div>
<div>
  <%= t('activerecord.attributes.daily_log.departure_location') %>:<%= @daily_log.departure_location %>
</div>
<div>
  <%= t('activerecord.attributes.daily_log.arrival_location') %>:<%= @daily_log.arrival_location %>
</div>
<div>
  <%= t('activerecord.attributes.daily_log.note') %>:<%= @daily_log.note %>
</div>
<%= form_for @daily_log, url: daily_log_path, data: { turbo: false } do |f| %>
  <%= f.hidden_field :departure_datetime %>
  <%= f.hidden_field :arrival_datetime %>
  <%= f.hidden_field :departure_distance %>
  <%= f.hidden_field :arrival_distance %>
  <%= f.hidden_field :departure_location %>
  <%= f.hidden_field :arrival_location %>
  <%= f.hidden_field :note %>
  <%= f.button 'BACK', value: 'back' %><%= f.button 'OK' %>
<% end %>
